<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/default_bg"
	    android:orientation="vertical" >
	    
	    <TextView 
	        android:id="@+id/name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:gravity="center"
	        android:textSize="20sp"
	        android:text="标题"/>
	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:padding="10dp"
	            android:gravity="center"
	            android:orientation="vertical">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14sp"
	                android:text="债权总额"/>
	            <TextView 
	                android:id="@+id/amount"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:textSize="16sp"
	                android:background="@color/red"
	                android:textColor="@android:color/white"
	                android:paddingLeft="5dp"
	                android:paddingTop="3dp"
	                android:paddingRight="5dp"
	                android:paddingBottom="3dp"
	                android:text="20000元"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:gravity="center"
	            android:orientation="vertical">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14sp"
	                android:text="借款年利率"/>
	            <TextView 
	                android:id="@+id/interest"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:textSize="16sp"
	                android:paddingTop="3dp"
	                android:textColor="@color/red"
	                android:text="30%"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:padding="10dp"
	            android:gravity="center"
	            android:orientation="vertical">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14sp"
	                android:text="还款期限"/>
	            <TextView 
	                android:id="@+id/month"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:textSize="16sp"
	                android:paddingTop="3dp"
	                android:textColor="@color/red"
	                android:text="36月"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:orientation="horizontal">

	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="保障范围:本、息" />
	        
	        <TextView 
	            android:id="@+id/repaymentType"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="还款方式"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:orientation="horizontal">
	        <TextView 
	            android:id="@+id/progress"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="投标进度:"/>
	        
	        <TextView 
	            android:id="@+id/lastmoney"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="剩余可投金额:"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:orientation="horizontal">
	        <TextView 
	            android:id="@+id/person"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="投标人数:"/>
	        
	        <TextView 
	            android:id="@+id/totalAmount"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="逾期到息本和利:"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:gravity="center">
	        <TextView 
	            android:id="@+id/state"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/red"
	            android:textColor="@android:color/white"
	            android:paddingLeft="10dp"
	            android:paddingTop="5dp"
	            android:paddingRight="10dp"
	            android:paddingBottom="5dp"
	            android:text="投标状态"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:background="#F5F5F5"
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="#959595"
	            android:textColor="@android:color/white"
	            android:paddingLeft="5dp"
	            android:paddingTop="3dp"
	            android:paddingRight="5dp"
	            android:paddingBottom="3dp"
	            android:text="借款人信息"/>
	        
	        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/realname"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="用户名:"/>
		        
		        <TextView 
		            android:id="@+id/marryType"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="婚姻状况"/>
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/gender"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="性别："/>
		        
		        <TextView 
		            android:id="@+id/haschildren"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="有无子女："/>
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/age"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="年龄："/>
		        
		        <TextView 
		            android:id="@+id/degree"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="文化程度："/>
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/address"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="户口所在地："/>
		        
		        <TextView 
		            android:id="@+id/employmentType"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
		            android:text="雇佣类型"/>
		    </LinearLayout>
	    </LinearLayout>
	    
	    <HorizontalScrollView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:color/white">
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <LinearLayout 
	                android:id="@+id/bottom_shenfenzheng"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_idcard"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="二代身份证"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/bottom_xinyong"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_xinyongbaogao"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="信用报告"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/bottom_danweizhengming"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_danweizhengming"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="单位证明"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	            <LinearLayout
	                android:id="@+id/bottom_shouruzhengming" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_shouruzhengming"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="收入证明"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/bottom_juzhuzhengming"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_juzhuzhengming"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="居住地报告"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/bottom_jingyingzhengming"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_jingyingzhengming"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="经营证明"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/bottom_jiaoyiliushui"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="vertical"
	                android:gravity="center">
	                <ImageView 
	                    android:layout_width="20dp"
	                    android:layout_height="20dp"
	                    android:src="@drawable/icon_jiaoyiliushui"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="12sp"
	                    android:layout_marginTop="3dp"
	                    android:layout_marginBottom="3dp"
	                    android:text="交易流水"/>
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_passed"/>
	            </LinearLayout>
	            
	        </LinearLayout>
	    </HorizontalScrollView>
	    
	</LinearLayout>
	
</ScrollView>
