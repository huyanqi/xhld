<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@drawable/list_item_bg_press"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/actionbar_logo"
                android:layout_height="@dimen/actionbar_logo"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_launcher" />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="充值" />
        </LinearLayout>

    </RelativeLayout>
    
    <TextView 
        android:id="@+id/bind_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:text="绑定手机号："/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/line"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="刮开充值卡上的密码涂层充值"/>
    
    <EditText 
        android:id="@+id/card_id"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="请输入充值卡卡号"
        android:padding="5dp"
        android:textSize="14sp"
        android:background="@drawable/pay_et_bg"/>
    
    <EditText 
        android:id="@+id/card_pwd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="请输入充值卡密码"
        android:padding="5dp"
        android:textSize="14sp"
        android:background="@drawable/pay_et_bg"/>
    
    <Button 
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/pay_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14sp"
        android:onClick="onClick"
        android:text="充值"/>

</LinearLayout>